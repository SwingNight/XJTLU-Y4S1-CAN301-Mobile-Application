<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/name_text"
        android:layout_width="135dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="Name:"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/name_data"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/default_head" />

    <TextView
        android:id="@+id/name_data"
        android:layout_width="277dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/name_text"
        app:layout_constraintTop_toBottomOf="@+id/default_head" />

    <TextView
        android:id="@+id/email_text"
        android:layout_width="135dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="Email:"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/email_data"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_text" />

    <TextView
        android:id="@+id/email_data"
        android:layout_width="277dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/email_text"
        app:layout_constraintTop_toBottomOf="@+id/name_data" />

    <TextView
        android:id="@+id/office_text"
        android:layout_width="135dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="Office:"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/office_data"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_text" />

    <TextView
        android:id="@+id/office_data"
        android:layout_width="277dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/office_text"
        app:layout_constraintTop_toBottomOf="@+id/email_data" />

    <TextView
        android:id="@+id/course_text"
        android:layout_width="135dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="Course:"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@+id/course_data"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/office_text" />

    <TextView
        android:id="@+id/course_data"
        android:layout_width="277dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/course_text"
        app:layout_constraintTop_toBottomOf="@+id/office_data" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="124dp"
        android:layout_height="65dp"
        android:onClick="Logout"
        android:text="LOGOUT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/course_data"
        app:layout_constraintVertical_bias="0.119" />

    <ImageView
        android:id="@+id/default_head"
        android:layout_width="193dp"
        android:layout_height="157dp"
        android:layout_marginTop="64dp"
        app:layout_constraintBottom_toTopOf="@+id/name_data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.913"
        app:srcCompat="@drawable/ic_baseline_person_outline_24" />

</androidx.constraintlayout.widget.ConstraintLayout>